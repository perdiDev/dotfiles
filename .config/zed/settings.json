{
    "auto_install_extensions": {
        "html": true,
        "catppuccin": true
    },

    "restore_on_startup": "last_workspace",
    "confirm_quit": true,
    "enable_language_server": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "max_tabs": 4,
    "tab_size": 4,
    "enable_preview_from_file_finder": false,

    "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": true,
        "search_results": true,
        "selected_text": true,
        "selected_symbol": true,
        "diagnostics": "all",
        "axes": {
            "horizontal": false,
            "vertical": true
        }
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": false
    },
    "tabs": {
        "close_position": "right",
        "file_icons": false,
        "git_status": false,
        "activate_on_close": "history",
        "show_close_button": "hover"
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },

    "theme": {
        "mode": "system",
        "light": "Catppuccin Frapp√© - No Italics",
        "dark": "Catppuccin Mocha"
    },
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 16,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "ui_font_size": 16,
    "icon_theme": "Catppuccin Mocha",
    "current_line_highlight": "none",

    "project_panel": {
        "button": false,
        "default_width": 240,
        "dock": "right",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "scrollbar": {
            "show": null
        },
        "indent_guides": {
            "show": "always"
        }
    },
    "git_panel": {
        "button": false,
        "dock": "right"
    },
    "collaboration_panel": {
        "button": false,
        "dock": "right"
    },
    "assistant": {
        "enabled": true,
        "button": true,
        "dock": "left",
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2"
    },
    "terminal": {
        "button": false
    },

    "features": {
        "edit_prediction_provider": "zed"
    },
    "relative_line_numbers": true,
    "vim_mode": true
}
